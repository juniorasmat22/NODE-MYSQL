    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="needs-validation was-validated" novalidate="" method="POST" action="/links/edit/{{usuario.UserId}}">
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom01">Email</label>
                            <input type="text" class="form-control" id="validationCustom01" name="email"
                                placeholder="Email" value="{{usuario.UserName}}" required="">
                            <div class="valid-feedback">
                                Genial!
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom02">Contraseña</label>
                            <input type="password" class="form-control" id="validationCustom02" name="contra"
                                placeholder="Contraseña" value="{{usuario.UserPassword}}" required="">
                            <div class="valid-feedback">
                                Genial!
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom03">Estado</label>
                            <select name="estado" id="validationCustom03" class="form-control" >
                                {{#if " usuario.UserEstado == 1  " }}
                                 <option value="b'1'" selected>ACTIVO</option>
                                <option value="b'0'" >INACTIVO</option>
                                {{else}}
                                 <option value="b'1'"  >ACTIVO</option>
                                <option value="b'0'"  selected>INACTIVO</option>
                                {{/if}}
                            </select>
                            <div class="valid-feedback">
                                Genial!
                            </div>
                        </div>
                        
                    </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Atras</button>
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
            </form>
        </div>
    </div>